<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashActivity">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.miaupetshop.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.miaupetshop.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.miaupetshop.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <activity
        android:id="@+id/splashActivity"
        android:name="com.example.miaupetshop.SplashActivity"
        android:label="activity_splash"
        tools:layout="@layout/activity_splash" />
    <action
        android:id="@+id/action_global_splashActivity"
        app:enterAnim="@id/splashActivity"
        app:destination="@id/navigation_home" />
</navigation>